---
import Github from "../icons/Github.astro";
import Threads from "../icons/Threads.astro";
import Linkedin from "../icons/Linkedin.astro";

const socialNetworks = [
  {
    name: "Github",
    link: "https://github.com/Ivanruii",
    logo: Github,
  },
  {
    name: "Linkedin",
    link: "https://github.com/Ivanruii",
    logo: Linkedin,
  },
  {
    name: "Threads",
    link: "https://github.com/Ivanruii",
    logo: Threads,
  },
];
---

<div class="flex gap-5 justify-center md:justify-normal">
  {
    socialNetworks.map((social) => (
      <a
        href={social.link}
        class="group relative bg-[#D9D9D9] rounded-full w-12 h-12 flex justify-center items-center p-4 hover:bg-black hover:scale-110 transition duration-200"
        target="_blank"
      >
        <social.logo class="w-[24px] absolute group-hover:fill-white transition duration-200" />
        <span class="opacity-0 group-hover:opacity-100 bg-black text-white text-xs rounded px-2 py-1 absolute bottom-full left-1/2 transform -translate-x-1/2 -translate-y-2 transition duration-200">
          {social.name}
        </span>
      </a>
    ))
  }
</div>
