---
const { logo, title, description } = Astro.props;
---

<div class="flex items-center rounded-lg p-4 gap-5 bg-white dark:bg-[#0f1629]">
  {
    logo ? (
      <img
        src={logo}
        class="w-20 h-20 bg-[#D9D9D9] rounded-full "
        alt={`Logo of ${logo}`}
      />
    ) : (
      <div class="w-20 h-20 bg-[#D9D9D9] rounded-full" />
    )
  }

  <div class="flex flex-col">
    <h4 class="text-2xl font-semibold">{title}</h4>

    <p class="text-md font-normal">
      {description}
    </p>
  </div>
</div>
