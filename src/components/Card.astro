---
import Badge from "./Badge.astro";

const { title, description, pageUrl, githubRepo, personalProject } =
  Astro.props;
---

<div class="bg-[#D9D9D9] p-3 rounded-lg flex flex-col gap-3">
  <div class="flex item-center justify-between">
    <h4 class="text-2xl font-semibold">{title}</h4>
    {
      personalProject ? (
        <Badge text={"Personal Project"} />
      ) : (
        <>
          <Badge text={"Project I was involved in"} />
        </>
      )
    }
  </div>

  <p class="text-md font-normal">
    {description}
  </p>
  <br />

  <div class="flex gap-5 w-full">
    <a
      target="_blank"
      href={`${pageUrl}`}
      class="border border-black px-3 py-2 rounded-md w-full text-center hover:bg-black hover:text-white transition duration-200"
    >
      Visit
    </a>
    <a
      target="_blank"
      href={githubRepo}
      class="border border-black px-3 py-2 rounded-md w-full text-center hover:bg-black hover:text-white transition duration-200"
    >
      Go to GitHub
    </a>
  </div>
</div>
