  >
    <HeroCustom
      breadcrumb={`Projects > ${project.NAME}`}
      title={project.NAME}
    />
    {project.PARAGRAPHS}
    {
      project.SHOWCASE_IMAGE && (
        <img src={project.SHOWCASE_IMAGE} class="rounded-md" />
      )
    }
  </main>
</Layout>
